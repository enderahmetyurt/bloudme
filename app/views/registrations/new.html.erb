<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">
    <%= t("home.sign_up") %>
  </h1>
  <%= form_with url: registration_url do |form| %>
    <div class="my-5">
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email", placeholder: t("registration.form.email.placeholder"), value: params[:email_address], class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <div>
      <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: t("registration.form.email.password"), maxlength: 72, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>
    <%= form.submit t("home.sign_up"), class: "rounded-lg mt-5 py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    <%= link_to t("home.sign_in"), new_session_path, class: "text-gray-700 underline" %>
  <% end %>
</div>
