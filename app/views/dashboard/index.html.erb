<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Your Posts</h1>

  <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
    <thead>
      <tr class="bg-gray-200 text-gray-700 text-sm leading-normal">
        <th class="py-3 px-6 text-left">Title</th>
        <th class="py-3 px-6 text-center">Status</th>
        <th class="py-3 px-6 text-center"></th>
      </tr>
    </thead>
    <tbody class="text-gray-600 text-sm">
      <% @posts.each do |post| %>
        <tr class="border-b border-gray-200 hover:bg-gray-100">
          <td class="py-3 px-6 text-left font-medium">
            <%= post.title %>
          </td>
          <td class="py-3 px-6 text-center">
            <span class="<%= post.published? ? 'text-green-600' : 'text-red-600' %>">
              <%= post.published? ? 'Published' : 'Unpublished' %>
            </span>
          </td>
          <td class="py-3 px-6 text-center">
            <%= link_to "Edit", edit_post_path(post), class: "text-blue-500 hover:underline" %>
            <%= link_to "Delete", post_path(post), data: { turbo_confirm: "Are you sure?", turbo_method: :delete }, class: "text-red-500 hover:underline ml-5" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>