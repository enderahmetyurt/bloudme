<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl"><%= t("feeds.new") %></h1>
  <%= form_with(model: @feed, class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label :feed_url %>
      <%= form.text_field :feed_url, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", required: true %>
    </div>
    <div class="my-5">
      <%= form.button t('helpers.submit.feed.create'), class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-flex items-center justify-center font-medium cursor-pointer w-full", data: { turbo_submits_with: spinner } %>
    </div>
  <% end %>
</div>
