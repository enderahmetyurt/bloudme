<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl"><%= t("feeds.new") %></h1>
  <%= form_with(model: @feed, class: "contents", data: { controller: "button-spinner", action: "turbo:submit-start->button-spinner#start turbo:submit-end->button-spinner#reset" }) do |form| %>
    <div class="my-5">
      <%= form.label :feed_url %>
      <%= form.text_field :feed_url, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", maxlength: "100" %>
    </div>

    <div class="relative inline-block">
      <button
        type="submit"
        data-button-spinner-target="button"
        class="rounded-lg py-3 px-5 bg-blue-600 text-white inline-flex items-center justify-center font-medium cursor-pointer w-full"
      >
        <span data-button-spinner-target="text"><%= t('helpers.submit.feed.create') %></span>
        <span
          data-button-spinner-target="spinner"
          class="hidden absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2"
        >
          <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"/>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v8z"/>
          </svg>
        </span>
      </button>
    </div>
  <% end %>
</div>
