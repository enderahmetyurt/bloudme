<div id="<%= dom_id post %>" class="w-full">
  <div class="bg-white shadow-md rounded-lg p-6">
    <div class="flex flex-col sm:flex-row sm:items-center gap-4">
      <% unless (controller_name == "posts" && action_name == "show") %>
        <%= image_tag post.user.avatar_url, class: "w-16 h-16 sm:w-10 sm:h-10 rounded-full" %>
      <% end %>
      <div>
        <h2 class="text-xl sm:text-2xl font-semibold text-blue-600 mb-2 hover:text-black">
          <%= link_to post.title, post_path(post) %>
        </h2>
        <% unless (controller_name == "posts" && action_name == "index") || (controller_name == "users" && action_name == "show") %>
          <div class="prose max-w-none text-sm sm:text-base text-gray-600">
            <%= post.content %>
          </div>
        <% end %>
      </div>
    </div>
    <hr class="border-gray-150 mt-5 mb-5">
    <div class="mt-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
      <%= link_to post.user.nick_name, user_path(post.user), class: "text-sm text-red-400" %>
      <div class="text-sm text-gray-500"><%= time_ago_in_words(post.created_at) %> ago</div>
    </div>
  </div>
</div>
