<div class="mx-auto w-full flex flex-col items-center md:w-2/3">
  <div class="w-full px-4 flex flex-col items-center sm:px-6 lg:px-8">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block text-center" id="notice"><%= notice %></p>
    <% end %>

    <%= render @post %>

    <div class="mt-5 flex flex-col sm:flex-row sm:items-center sm:justify-center space-y-3 sm:space-y-0 sm:space-x-3">
      <%= link_to "Back to posts", posts_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-center" %>
      <% if Current.user == @post.user %>
        <%= link_to "Edit this post", edit_post_path(@post), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-center" %>
        <div class="inline-block">
          <%= button_to "Destroy this post", @post, method: :delete, class: "rounded-lg py-3 px-5 bg-red-100 font-medium text-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
