<div class="w-full max-w-2xl text-center bg-white shadow-md rounded-lg p-8">
  <header>
    <h1 class="text-4xl font-bold text-blue-600"><%= t("home.welcome") %></h1>
    <p class="text-lg text-gray-600 mt-4"><%= t("home.description") %></p>
    <nav class="mt-6">
      <%= link_to t("home.sign_up"), new_registration_path, class: "text-white bg-blue-600 hover:bg-blue-700 py-2 px-4 rounded-lg mx-2" %>
      <%= link_to t("home.sign_in"), new_session_path, class: "text-blue-600 hover:text-blue-700 py-2 px-4 rounded-lg mx-2 border border-blue-600" %>
    </nav>
  </header>
  <main class="mt-10">
    <section>
      <h2 class="text-2xl font-semibold text-gray-800"><%= t("home.why") %></h2>
      <p class="mt-4 text-gray-600"><%= t("home.why_description") %></p>
    </section>
  </main>
  <footer class="mt-10 text-gray-500 flex flex-col gap-5">
    <p>&copy; <%= Time.now.year %> Bloudme. <%= t("home.all_rights_reserved") %></p>
    <div>
      <% I18n.available_locales.each do |locale| %>
        <%= link_to locale_to_flag(locale), url_for(locale: locale), class: (locale == I18n.locale ? "text-xl" : "") %>
      <% end %>
    </div>
  </footer>
</div>
