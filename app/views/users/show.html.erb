<div class="w-full">
  <% content_for :title, "#{@user.nick_name}" %>

  <div class="flex items-center gap-4">
    <%= image_tag @user.avatar_url, class: "w-10 h-10 rounded-full" %>
    <div class="font-medium dark:text-white">
      <div class="text-sm text-red-400"><%= @user.nick_name %></div>
      <div class="text-sm text-gray-500">Joined in <%= @user.created_at.strftime("%B, %Y") %></div>
    </div>
  </div>

  <div id="feeds" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 gap-6 mt-10">
    <% @feeds.each do |feed| %>
      <%= render feed %>
    <% end %>
  </div>
</div>
