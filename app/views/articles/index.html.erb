<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, t("articles") %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t("articles") %></h1>
  </div>

  <%= turbo_frame_tag "articles-container" do %>
    <div class="border-b border-gray-200 w-full">
      <ul class="flex space-x-2 justify-center">
        <li class="<%= params["read"] == "true" ? "" : "bg-gray-100" %>">
          <%= link_to t("article.unread"),
            articles_path(read: false),
            class: "inline-block py-4 px-4 text-sm font-medium text-center text-gray-500 border-b-2 border-transparent hover:text-gray-600 hover:border-gray-300"
          %>
        <li class="<%= params["read"] == "true" ? "bg-gray-100" : "" %>">
          <%= link_to t("article.read"),
            articles_path(read: true),
            class: "inline-block py-4 px-4 text-sm font-medium text-center text-gray-500 border-b-2 border-transparent hover:text-gray-600 hover:border-gray-300"
          %>
        </li>
      </ul>
    </div>
    <div id="articles" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 gap-6 mt-5">
      <%= render @articles %>
    </div>
  <% end %>
</div>
