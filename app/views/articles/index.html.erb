<div class="w-full" data-controller="filter-segment">
  <% content_for :title, t("articles") %>
  <div class="flex justify-between items-center flex-col md:flex-row">
    <h1 class="font-bold text-4xl"><%= t("articles") %></h1>
    <div class="font-mono text-gray-500 text-sm mt-5 mb-5 md:mt-0 md:mb-0">
      <% if JobRun.last %>
        <p><%= t("feed.last_fetched", time: time_ago_in_words(JobRun.last.ran_at)) %></p>
        <p><%= t("feed.next_run", time: time_ago_in_words(JobRun.last.next_run_at)) %></p>
      <% end %>
    </div>
  </div>

  <div class="flex flex-col lg:flex-row gap-0 transition-all duration-300">
    <div class="flex-1 transition-all duration-300">
      <%= turbo_frame_tag "articles-list" do %>
      <div class="border-b border-gray-200 w-full">
        <div class="flex justify-end flex-col lg:flex-row mt-5">
          <button data-action="click->filter-segment#toggle" data-filter-segment-target="button" class="p-2 mr-5 text-gray-600 hover:text-gray-900 rounded-lg transition-colors lg:mr-5 mr-0">
            <svg class="w-6 h-6" data-filter-segment-target="icon" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
            </svg>
          </button>
        </div>
      </div>

      <div data-filter-segment-target="segment" class="overflow-hidden transition-all duration-300 hidden lg:hidden w-full" style="height: 0;">
        <div class="w-full border-b border-gray-200 p-5 bg-white">
          <h2 class="font-bold text-lg mb-4"><%= t("filters") %></h2>
          <div class="space-y-4">
            <div>
              <div class="flex items-center mb-3">
                <input type="checkbox" id="today-checkbox" class="h-4 w-4 text-blue-600 rounded border-gray-300" data-action="change->filter-segment#filterToday" <%= params[:date].present? ? 'checked' : '' %> />
                <label for="today-checkbox" class="ml-2 text-sm font-medium text-gray-700"><%= t("today") %></label>
              </div>
              <div class="flex items-center">
                <input type="checkbox" id="unread-checkbox" class="h-4 w-4 text-blue-600 rounded border-gray-300" data-action="change->filter-segment#toggleUnread" <%= params["read"] != "true" ? 'checked' : '' %> />
                <label for="unread-checkbox" class="ml-2 text-sm font-medium text-gray-700"><%= t("article.unread") %></label>
              </div>
              <label class="block text-sm font-medium text-gray-700 mb-2 mt-3"><%= t("sources") %></label>
              <select class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm bg-white" data-action="change->filter-segment#selectFeed">
                <option value="" <%= params[:feed_id].blank? ? 'selected' : '' %>>
                  <%= t("all") %>
                </option>
                <% @feeds.each do |feed| %>
                  <option value="<%= feed.id %>" <%= params[:feed_id].to_i == feed.id ? 'selected' : '' %>>
                    <%= feed.title %>
                  </option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
      </div>

      <div id="articles" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 gap-6 mt-5">
        <div class="only:flex hidden gap-5 justify-center items-center mt-10 font-mono text-2xl">
          <p><%= t("no_article_unicorn") %> <%= t("no_article") %></p>
        </div>
        <%= render partial: "article", collection: @articles %>
      </div>
      <div class="only:flex mt-8">
        <%= paginate @articles %>
      </div>
      <% end %>
    </div>

    <div data-filter-segment-target="segment-desktop" class="overflow-hidden transition-all duration-300 hidden lg:block w-0" style="width: 0;">
      <div class="w-64  border-gray-200 p-5 bg-white flex-shrink-0 overflow-y-auto relative">
        <h2 class="font-bold text-lg mb-4"><%= t("filters") %></h2>
        <div class="space-y-4">
          <div class="flex items-center mb-3">
            <input type="checkbox" id="today-checkbox-desktop" class="h-4 w-4 text-blue-600 rounded border-gray-300" data-action="change->filter-segment#filterToday" <%= params[:date].present? ? 'checked' : '' %> />
            <label for="today-checkbox-desktop" class="ml-2 text-sm font-medium text-gray-700"><%= t("today") %></label>
          </div>
          <div class="flex items-center">
            <input type="checkbox" id="unread-checkbox-desktop" class="h-4 w-4 text-blue-600 rounded border-gray-300" data-action="change->filter-segment#toggleUnread" <%= params["read"] != "true" ? 'checked' : '' %> />
            <label for="unread-checkbox-desktop" class="ml-2 text-sm font-medium text-gray-700"><%= t("article.unread") %></label>
          </div>
          <div class="mt-3">
            <label class="block text-sm font-medium text-gray-700 mb-2"><%= t("sources") %></label>
            <select class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm bg-white" data-action="change->filter-segment#selectFeed">
              <option value="" <%= params[:feed_id].blank? ? 'selected' : '' %>>
                <%= t("all") %>
              </option>
              <% @feeds.each do |feed| %>
                <option value="<%= feed.id %>" <%= params[:feed_id].to_i == feed.id ? 'selected' : '' %>>
                  <%= feed.title %>
                </option>
              <% end %>
            </select>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
